#!/usr/bin/env ruby

# osascript -e 'tell application "System Events" to key code 144 using command down'

require 'sinatra'

set :bind, "0.0.0.0"
set :port, 51111

get '/tdm' do
  %x[osascript -e 'tell application \"System Events\" to key code 144 using command down']
end

get '/ping' do
  "TDM server ready"
end
